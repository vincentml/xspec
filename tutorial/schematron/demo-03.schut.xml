<?xml version="1.0" encoding="UTF-8"?>
<?xml-model href="../../src/schemas/schut.rnc" type="application/relax-ng-compact-syntax"?>
<s:description xmlns:s="http://www.jenitennison.com/xslt/xspec/schematron" schematron="demo-03.sch">

    <s:scenario label="demo 1">

        <s:scenario label="inline context">
            <s:scenario label="valid">
                <s:context>
                    <document>
                        <title>Introduction</title>
                        <p>some paragraph text</p>
                    </document>
                </s:context>
                <s:expect-not-assert id="a0001"/>
                <s:expect-valid/>
            </s:scenario>
            <s:scenario label="not valid">
                <s:context>
                    <document>
                        <title>Introduction</title>
                    </document>
                </s:context>
                <s:expect-assert id="a0001"/>
            </s:scenario>
            <s:scenario label="valid with warning">
                <s:context>
                    <document>
                        <title>Introduction</title>
                        <p>Hello!</p>
                    </document>
                </s:context>
                <s:expect-valid/>
                <s:expect-report id="a0003"/>
            </s:scenario>
        </s:scenario>

        <s:scenario label="file as context">
            <s:scenario label="valid file with warning">
                <s:context href="demo-03-doc2.xml"/>
                <s:expect-valid/>
                <s:expect-assert id="a0002" role="warn"/>
            </s:scenario>
            <s:scenario label="not valid file">
                <s:context href="demo-03-doc1.xml"/>
                <s:expect-assert id="a0001"/>
            </s:scenario>
        </s:scenario>

        <s:scenario label="example" pending="tests marked as pending are not executed">
            <s:context href="demo-03-doc1.xml"/>
            <s:expect-valid/>
        </s:scenario>

    </s:scenario>

</s:description>
